<div class="row">
  <div class="col-xs-12 col-md-9 image-container">
    <%= image_tag @image.file.url, class: 'img-responsive' %>
  </div>
  <div class="col-xs-10 col-md-3 col-xs-offset-1 col-md-offset-0">
    <%= link_to t('image.destroy_button'), @image, method: :delete, class: 'btn btn-primary btn-lg btn-block btn-delete-image' %>
  </div>
</div>
